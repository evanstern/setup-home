[user]
    name = Evan Stern
	email = estern@onshift.com

[core]
    pager = less -FRSX
    editor = vim
	excludesfile = ~/.cvsignore

[color]
    ui = auto
    diff = auto
    branch = auto
    interactive = auto
    status = auto
            sh = auto

[alias]
    st = status
    di = diff
    co = checkout
    ci = commit
    br = branch
    sta = stash
            nlog = log --no-merges
	purr = pull --rebase
	amend = commit --amend
[color "sh"]
            branch = green

