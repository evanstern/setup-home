#!/bin/bash

if [[ -z $VIRTUAL_ENV || ! -f ${VIRTUAL_ENV}/.project ]]; then
    echo "Inactive"
    exit
fi

PROJECT=$(<${VIRTUAL_ENV}/.project)

cd $PROJECT

if [[ ! -d ${PROJECT}/.git ]]; then
    echo "No Git"
    exit
fi

#BRANCH="`git status | grep '# On branch' | sed 's/#\ On\ branch\ //'`"
BRANCH="`git branch | grep '\*' | sed 's/\*\ //'`"

echo $BRANCH
